<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    
    <persistence-unit name="ecommerce-pu" transaction-type="RESOURCE_LOCAL">
        
        <!-- Entidades JPA -->
        <class>com.ecommerce.domain.Categoria</class>
        <class>com.ecommerce.domain.Produto</class>
        <class>com.ecommerce.domain.Cliente</class>
        <class>com.ecommerce.domain.Endereco</class>
        <class>com.ecommerce.domain.Carrinho</class>
        <class>com.ecommerce.domain.ItemCarrinho</class>
        <class>com.ecommerce.domain.Pedido</class>
        <class>com.ecommerce.domain.ItemPedido</class>
        <class>com.ecommerce.domain.PedidoItem</class>
        <class>com.ecommerce.domain.Pagamento</class>
        <class>com.ecommerce.domain.PagamentoCartao</class>
        <class>com.ecommerce.domain.PagamentoBoleto</class>
        <class>com.ecommerce.domain.PagamentoPix</class>
        <class>com.ecommerce.domain.Notificacao</class>
        <class>com.ecommerce.domain.UserModel</class>
        
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        
        <properties>
            <!-- Configurações serão definidas programaticamente -->
        </properties>
        
    </persistence-unit>
</persistence>